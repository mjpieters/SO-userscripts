{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "DOM",
            "esnext"
        ],
        "moduleResolution": "node16",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2020",
        "types": [
            "@types/luxon",
            "@types/tampermonkey",
            "@userscripters/stackexchange-global-types"
        ],
        "baseUrl": ".",
        "paths": {
            "@connected-users/*": [
                "scripts/connected-users/src/*"
            ]
        }
    },
    "exclude": [
        "dist"
    ]
}