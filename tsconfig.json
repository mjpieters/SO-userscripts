{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "DOM",
            "esnext"
        ],
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2020",
        "types": [
            "@types/tampermonkey",
            "@userscripters/stackexchange-global-types",
        ]
    },
    "exclude": [
        "dist",
    ],
}